<Window x:Class="PlGui.LinesPresentationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="LinesPresentationWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="ListLines" HorizontalAlignment="Left" ItemsSource="{Binding  Mode=OneWay, UpdateSourceTrigger=PropertyChanged }"  Height="400" Margin="0,0,0,0" VerticalAlignment="Top" Width="300"/>
        <Button Name="AddLineButton" Content="Add Line" HorizontalAlignment="Left" Margin="450,70,0,0" VerticalAlignment="Top" TextElement.FontSize="16" Background="Yellow" MaxWidth="150" Click="AddLineButton_Click"/>

    </Grid>
</Window>
