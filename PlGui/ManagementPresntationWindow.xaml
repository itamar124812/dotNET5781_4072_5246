<Window x:Class="PlGui.ManagementPresntationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="ManagementPresntationWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="1" TargetType="Button">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="250"></Setter>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Window.Resources>
    <Grid Background="AliceBlue">
        <Button Name="LinePre" Content="LinesPresentation" Margin="250,80,0,0" Style="{StaticResource ResourceKey=1}" Background="Beige" Click="LinePre_Click"/>
        <Button Name="StationPre" Content="StationsPresentation" Margin="250,190,0,0"  Style="{StaticResource ResourceKey=1}" Background="GreenYellow" Click="StationPre_Click" />
        <Button Name="Buspre" Content="BusesPresentation" Margin="250,300,0,0" Style="{StaticResource ResourceKey=1}" Background="Cyan"/>

    </Grid>
</Window>
