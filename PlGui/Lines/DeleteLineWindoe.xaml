<Window x:Class="PlGui.DeleteLineWindoe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="DeleteLineWindoe" Height="120" Width="200">
    <Grid>
        <WrapPanel>
            <TextBlock HorizontalAlignment="Left" FontSize="16" Height="40" TextWrapping="Wrap" Text="Which line id?" VerticalAlignment="Top"/>
            <TextBox Name="LineNum" Text="0" FontSize="20" MaxWidth="150" MinWidth="50" TextWrapping="Wrap" TextAlignment="Center" Height="30" VerticalAlignment="Top" TextChanged="LineNum_TextChanged" />
            <Button Content="Cancel" TextElement.FontSize="16" Margin="15,0,0,0" VerticalAlignment="Top" Background="LightGreen" HorizontalAlignment="Left"  Click="Cancel_Click" />
            <Button Name="OkeyDelete" Content="Delete" TextElement.FontSize="16" Margin="60,0,0,0" VerticalAlignment="Top" Background="Tomato" HorizontalAlignment="Left" Click="OkeyDelete_Click"  />
        </WrapPanel>
    </Grid>
</Window>
