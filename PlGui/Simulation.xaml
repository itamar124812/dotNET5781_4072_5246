<Window x:Class="PlGui.Simulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="Simulation" Height="450" Width="800">
    <Grid>
        <TextBox Name="TimeSimulation" FontSize="20" TextAlignment="Center" Text="00:00:00" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" PreviewTextInput="Try_Text" Margin="125,40,0,0" />
        <TextBox Name="Rate" Margin="63,40,0,0" FontSize="20" VerticalAlignment="Top" Width="30" TextAlignment="Center"  Text="1" HorizontalAlignment="Left" TextChanged="input_cheke" RenderTransformOrigin="0.764,1.615"></TextBox>
        <Button Content="Start" Width="50" Height="30"  Margin="0,0,484,350" VerticalAlignment="Bottom" Background="LightCyan" HorizontalAlignment="Right" Name="OnOffButton" Click="OnOffButton_Click" RenderTransformOrigin="-5.837,-9.271"/>

    </Grid>
</Window>
