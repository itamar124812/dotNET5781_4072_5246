<Window x:Class="dotNET5781_3B_4072_5246.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNET5781_3B_4072_5246"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="200"  >
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="licence number" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Row="0" Background="AliceBlue"/>
            <ListBox Name="List_Bus" HorizontalAlignment="Left" Height="390" Margin="0,0,0,0" VerticalAlignment="Top" Width="200" ItemsSource="{Binding Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" MouseDoubleClick="Showing_Details" Grid.Row="2" Background="AliceBlue" IsSynchronizedWithCurrentItem="true"   />
        </Grid>

       
        <Button Content="add a new bus" HorizontalAlignment="Left" Margin="349,24,0,0" VerticalAlignment="Top" Width="100" Background="Yellow" Click="Button_Add_click"/>
       


    </Grid>
</Window>
